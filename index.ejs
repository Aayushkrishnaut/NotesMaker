<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen">
        <div class="form p-10 max-w-3xl mx-auto">
            <form action="/create" method="post">
                <div class="mb-4">
                    <label for="title" class="block text-lg font-medium">Title</label>
                    <input id="title" class="block px-3 py-2 w-full rounded-md text-white bg-zinc-800" type="text" placeholder="Title goes here" name="title" aria-label="Title">
                </div>
                <div class="mb-4">
                    <label for="details" class="block text-lg font-medium">Details</label>
                    <textarea id="details" class="px-3 py-2 w-full rounded-md bg-zinc-800 text-white resize-none" placeholder="Write your task" name="details" aria-label="Details"></textarea>
                </div>
                <input class="mt-2 bg-blue-500 px-5 py-2 rounded-md text-white cursor-pointer" type="submit" value="Create Task">
            </form>
        </div>

        <!-- Tasks section with flex layout -->
        <div class="tasks p-10 max-w-3xl mx-auto flex flex-wrap gap-3">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task min-w-72 px-4 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-2xl font-semibold"><%= val %></h1>
                       <div class="flex w-full justify-between items-center mt-2">
                           <a class="text-blue-500 inline-block hover:underline" href="/file/<%= val %>" aria-label="Read more about <%= val %>">Read More..</a>
                           <a  class="text-zinc-600 " href="/edit/<%= val %>">edit</a>

                       </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-zinc-600 text-lg">No tasks yet.</h1>
            <% } %>
        </div>
    </div>
</body>
</html>
